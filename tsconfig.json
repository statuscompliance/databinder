{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext" 
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "tests"]
}